<?xml version="1.0"?>
<config>
    <modules>
        <Magentothem_Brandlogo>
            <version>0.1.0</version>
        </Magentothem_Brandlogo>
    </modules>
    <frontend>
        <routers>
            <brandlogo>
                <use>standard</use>
                <args>
                    <module>Magentothem_Brandlogo</module>
                    <frontName>brandlogo</frontName>
                </args>
            </brandlogo>
        </routers>
        <layout>
            <updates>
                <brandlogo>
                    <file>brandlogo.xml</file>
                </brandlogo>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <brandlogo>
                <use>admin</use>
                <args>
                    <module>Magentothem_Brandlogo</module>
                    <frontName>brandlogo</frontName>
                </args>
            </brandlogo>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <magentothem translate="title" module="brandlogo">
                <title>Magentothem</title>
                <sort_order>71</sort_order>               
                <children>
                    <brandlogo translate="title" module="brandlogo">
                        <title>Brand Logo</title>
                        <sort_order>35</sort_order>
                        <children>
                            <configuration>
                                <title>Configuration</title>
                                <sort_order>1</sort_order>
                                <action>adminhtml/system_config/edit/section/brandlogo</action>
                            </configuration>
                            <items module="brandlogo">
                                <title>Manage Brand Logo</title>
                                <sort_order>0</sort_order>
                                <action>brandlogo/adminhtml_brandlogo</action>
                            </items>
                        </children>
                    </brandlogo>
                </children>
            </magentothem>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <brandlogo>
                                            <title>Brand logo</title>
                                        </brandlogo>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <brandlogo>
                    <file>brandlogo.xml</file>
                </brandlogo>
            </updates>
        </layout>
    </adminhtml> 
    <global>
        <models>
            <brandlogo>
                <class>Magentothem_Brandlogo_Model</class>
                <resourceModel>brandlogo_mysql4</resourceModel>
            </brandlogo>
            <brandlogo_mysql4>
                <class>Magentothem_Brandlogo_Model_Mysql4</class>
                <entities>
                    <brandlogo>
                        <table>brandlogo</table>
                    </brandlogo>
                </entities>
            </brandlogo_mysql4>
        </models>
        <resources>
            <brandlogo_setup>
                <setup>
                    <module>Magentothem_Brandlogo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brandlogo_setup>
            <brandlogo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brandlogo_write>
            <brandlogo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brandlogo_read>
        </resources>
        <blocks>
            <brandlogo>
                <class>Magentothem_Brandlogo_Block</class>
            </brandlogo>
        </blocks>
        <helpers>
            <brandlogo>
                <class>Magentothem_Brandlogo_Helper</class>
            </brandlogo>
        </helpers>
    </global>
     <default>
        <brandlogo>
            <brandlogo_config>
                <enabled>1</enabled>
                <limit>10</limit>
            </brandlogo_config>
        </brandlogo>
    </default>
</config>